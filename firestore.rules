
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create a document in the 'subscribers' collection.
    // This is for the general newsletter signup.
    match /subscribers/{subscriberId} {
      allow create: if true;
    }

    // Allow anyone to create a document in the 'notifyme' collection.
    // This is for the 'Coming Soon' page signups.
    match /notifyme/{notificationId} {
      allow create: if true;
    }
  }
}
